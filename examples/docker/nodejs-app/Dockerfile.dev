# Development Dockerfile with hot reload

FROM node:20-alpine

# Install development tools
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    curl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Enable development mode
ENV NODE_ENV=development

# Use nodemon for hot reload
CMD ["npm", "run", "dev"]
